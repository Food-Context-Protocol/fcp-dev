---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Food Context Protocol" description="Page not found">
  <main class="min-h-screen flex items-center justify-center bg-white">
    <div class="text-center px-6 py-12">
      <h1 class="text-8xl sm:text-9xl font-bold text-gray-950 tracking-tight mb-4">
        404
      </h1>
      <p class="text-lg text-gray-400 tracking-widest uppercase mb-8">
        Not Found
      </p>
      <a
        href="/"
        class="inline-block text-sm font-medium text-gray-500 border border-gray-300 px-5 py-2.5 hover:text-gray-950 hover:border-gray-950 transition-colors duration-200"
      >
        &larr; Return
      </a>
    </div>
  </main>
</Layout>
