---
import Layout from '../layouts/Layout.astro';
---

<Layout title="FCP - Coming Soon" description="Something new is coming">
  <main class="min-h-screen flex items-center justify-center px-6" style="background: linear-gradient(135deg, #f5f5f5 0%, #e8f5e9 100%);">
    <div class="max-w-2xl w-full text-center">
      <!-- Logo with green accent -->
      <div class="mb-16">
        <div class="inline-block">
          <h1 class="text-9xl font-bold mb-4" style="color: #333333; letter-spacing: 0.05em;">
            FCP
          </h1>
          <div style="width: 120px; height: 8px; background: linear-gradient(90deg, #4CAF50 0%, #81C784 100%); border-radius: 4px; margin: 0 auto;"></div>
        </div>
      </div>
      
      <!-- Content -->
      <div class="space-y-8">
        <h2 class="text-4xl font-semibold" style="color: #4CAF50;">
          Coming Soon
        </h2>
        <p class="text-xl" style="color: #666666; line-height: 1.8;">
          Something innovative is on the way.<br/>
          Stay tuned for updates.
        </p>
      </div>
      
      <!-- Progress indicator -->
      <div class="mt-20 flex justify-center items-center space-x-3">
        <div style="width: 12px; height: 12px; background-color: #4CAF50; border-radius: 50%; animation: pulse 2s infinite;"></div>
        <div style="width: 8px; height: 8px; background-color: #81C784; border-radius: 50%; opacity: 0.6;"></div>
        <div style="width: 8px; height: 8px; background-color: #A5D6A7; border-radius: 50%; opacity: 0.4;"></div>
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }
</style>
