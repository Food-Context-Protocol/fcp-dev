---
import Layout from '../layouts/Layout.astro';
---

<Layout title="FCP - Coming Soon" description="Something new is coming">
  <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-white to-green-50 px-6">
    <div class="max-w-2xl text-center">
      <div class="mb-8">
        <h1 class="text-6xl md:text-7xl font-bold text-gray-900 mb-4">
          FCP
        </h1>
        <div class="w-24 h-1 bg-[#4CAF50] mx-auto rounded-full"></div>
      </div>
      
      <p class="text-2xl md:text-3xl text-gray-600 mb-8">
        Coming Soon
      </p>
      
      <p class="text-lg text-gray-500 max-w-xl mx-auto">
        Something new is on the way. Stay tuned.
      </p>
    </div>
  </main>
</Layout>
