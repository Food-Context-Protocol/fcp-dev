---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Food Context Protocol" description="Open protocol for AI-powered food context. Coming soon.">
  <main class="min-h-screen flex items-center justify-center relative overflow-hidden bg-white">
    <!-- Subtle circuit-trace decoration -->
    <div class="circuit-lines" aria-hidden="true">
      <svg class="absolute top-0 left-0 w-full h-full opacity-[0.04]" viewBox="0 0 1200 800" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 200 H300 L350 150 H600" stroke="#000" stroke-width="1.5"/>
        <path d="M1200 300 H900 L850 350 H650" stroke="#000" stroke-width="1.5"/>
        <path d="M200 0 V200 L250 250 V400" stroke="#000" stroke-width="1.5"/>
        <path d="M1000 800 V600 L950 550 V400" stroke="#000" stroke-width="1.5"/>
        <circle cx="300" cy="200" r="4" fill="#000"/>
        <circle cx="600" cy="150" r="4" fill="#000"/>
        <circle cx="900" cy="300" r="4" fill="#000"/>
        <circle cx="650" cy="350" r="4" fill="#000"/>
        <circle cx="200" cy="200" r="4" fill="#000"/>
        <circle cx="250" cy="400" r="4" fill="#000"/>
        <circle cx="1000" cy="600" r="4" fill="#000"/>
        <circle cx="950" cy="400" r="4" fill="#000"/>
      </svg>
    </div>

    <div class="text-center relative z-10 px-6 py-12 max-w-2xl mx-auto">
      <!-- Logo -->
      <div class="mb-10">
        <img
          src="/logo.png"
          alt="Food Context Protocol"
          width="220"
          height="220"
          class="mx-auto select-none"
          draggable="false"
        />
      </div>

      <!-- Title -->
      <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-gray-950 mb-3">
        Food Context Protocol
      </h1>

      <!-- Divider -->
      <div class="w-16 h-px bg-gray-900 mx-auto my-6"></div>

      <!-- Tagline -->
      <p class="text-base sm:text-lg text-gray-500 font-normal tracking-wide mb-10">
        Open protocol for AI-powered food context
      </p>

      <!-- GitHub link -->
      <div class="mt-12">
        <a
          href="https://github.com/Food-Context-Protocol"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-gray-900 transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
          GitHub
        </a>
      </div>
    </div>
  </main>
</Layout>
